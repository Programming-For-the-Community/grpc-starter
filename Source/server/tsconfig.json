{
  "compilerOptions": {
    "module": "CommonJS",              // Module system (Node.js uses CommonJS)
    "moduleResolution": "Node",
    "esModuleInterop": true,           // Enable default imports for commonjs modules
    "target": "ESNext",   
    "sourceMap": true,
    "resolveJsonModule": true,             // Target version of JavaScript to output
    "strict": true,                    // Enable all strict type-checking options
    "skipLibCheck": true,              // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",                // Output folder for compiled files
    "rootDir": "."                     // Input folder for TypeScript files (if .ts files are in the root)
  },
  "include": [
    "**/*.ts",
    "__tests__/**/*.ts"                          
  ],
  "exclude": [
    "node_modules"                     // Exclude node_modules
  ]
}
